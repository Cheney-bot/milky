/* pages/mine/mine.wxss */
page{
  width:100%;
  height:100%;
  background: #FAFBFB;
}
.top{
  width:100%;
  height:50%;
  padding:40rpx 5% 0;
  box-sizing: border-box;
  background-color: lightblue;
  position: relative;
}
.pageTit{
  height:90rpx;
  line-height: 90rpx;
  width:100%;
  text-align: center;
  color:#fff;
  font-weight: bolder;
  font-size: 28rpx;
}
.userMes{
  width:90%;
  height:140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom:60rpx;
}
.nameWrap{
  height:100%;
  font-size: 32rpx;
  font-weight: bolder;
  color:#fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.nameWrap>view{
  line-height: 60rpx;
}
.nickName{
  line-height: 60rpx;
}
.userHeader{
  width:140rpx;
  height:140rpx;
  background-color: #fff;
  border-radius: 50%;
  overflow: hidden;
}
.bottom{
  width:100%;
  height:50%;
  padding:0 5%;
  box-sizing: border-box;
}
.tools{
  width:100%;
  height:256rpx;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0px 2px 6px 0px rgba(215, 215, 215, 40);
  border: 1px solid rgba(255, 255, 255, 100);
  position: relative;
  top:-30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.toolsItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.toolsItem>image{
  width:72rpx;
  height:72rpx;
  margin-bottom: 10rpx;
}
.toolsItem>.toolsContent{
  font-size: 36rpx;
  font-weight: bolder;
  margin-bottom: 10rpx;
}
.toolsItem>.toolsTit{
  font-size: 24rpx;
  color:#999;
  margin-bottom: 10rpx;
}
.myOrder{
  width:100%;
  height:100rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:0 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0px 2px 6px 0px rgba(215, 215, 215, 40);
  border: 1px solid rgba(255, 255, 255, 100);
}
.myOrder>image{
  width:48rpx;
  height:48rpx;
  margin-right:20rpx;
}

.loadinBtn{
  background-color: #FECE51;
  color:#fff;
  font-size: 40rpx;
  position: relative;
  top:80rpx;
}