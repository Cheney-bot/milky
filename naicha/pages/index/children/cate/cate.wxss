.cate{
  width: 100%;
  padding: 0 15rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.cate-left{
  width: 200rpx;
  height: 100%;
}

.cate-item{
  width: 100%;
  padding: 40rpx 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #ddd;
}
.cate-item:nth-child(1){
  border: none;
}
.cate-img{
  width: 40rpx;
  height: 40rpx;
}
.cate-right{
  flex: 1;
  padding: 40rpx 15rpx 0 20rpx;
  box-sizing: border-box;
}
.lable{
  font-size: 20rpx;
  color: #999;
}

.listWrap{
  width: 100%;
}
.list-item{
  display: flex;
  border-bottom: 1rpx dotted #333;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.item-left{
  width: 120rpx;
  padding: 20rpx 0 ;
}
.item-img{
  width: 100%;
  height: 100%;
}
.item-right{
  flex: 1;
  position: relative;
  margin-left: 20rpx;
}
.item-name{
  font-size: 30rpx;
  font-weight: bold;
}
.item-desc{
  font-size: 24rpx;
  color: #999;
  margin: 20rpx 0 ;
}
.item-bot{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-price{
  font-size: 26rpx;
  font-weight: bold;
}
.item-lable{
  padding: 5rpx 10rpx;
  background-color: #FECE51;
  color: #fff;
  border-radius: 20rpx;
  font-size: 20rpx;
}
