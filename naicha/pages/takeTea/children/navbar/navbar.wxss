/* pages/takeTea/children/navbar/navbar.wxss */
.navbar{
  height:90rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
}
.navbarItem{
  height:90rpx;
  line-height:90rpx;
  width:33.33%;
  text-align: center;
}
.navbarItem>text{
  font-weight: bolder;
  font-size: 28rpx;
  color:#999;
  padding-bottom: 9px;
  border-bottom: 3px solid #FECE51 0%;
}
.navbarItem>.active{
  color:#333;
  padding-bottom: 9px;
  border-bottom: 3px solid #FECE51;
}