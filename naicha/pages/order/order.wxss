.title{
  width:100%;
  font-size: 28rpx;
  font-weight: bolder;
  height:80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px dashed #f2f2f2;
}
.titleImg{
  width:48rpx;
  height:48rpx;
  margin-right:20rpx;
}
.orderList{
  width:100%;
  height:fit-content;
  border-bottom: 1px dashed #f2f2f2;
}
.orderItem{
  width:100%;
  height:160rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: bolder;
}
.goodImg{
  width:110rpx;
  height:110rpx;
  margin-right:20rpx;
}
.goodText{
  flex: 1;
  height:110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goodMes{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.options>text{
  margin-right:20rpx;
  font-weight: normal;
  color:#999;
}
.goodPay{
  display: flex;
  flex-direction: row;
}
.numPrice{
  margin-right:20rpx;
}
.totalPrice{
  color:#FA6400;
}
.totalWrap{
  width:100%;
  height:80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.call{
  height:100%;
  font-size: 24rpx;
  color:#666;
  display: flex;
  align-items: center;
}
.call>image{
  width:40rpx;
  height:40rpx;
  margin-right: 20rpx;
}
.total{
  font-size: 28rpx;
  font-weight: bolder;
}