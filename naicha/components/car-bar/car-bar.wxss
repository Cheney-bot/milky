.car-wrap{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 0;
}
.cover{
  width: 100%;
  height: 100%;
  background-color: rgba(58,57,54, .5);
  position: relative;
}
.car-bar-wrap{
  width: 100%;
  height: 100rpx;
  background-color: #002242;
  position: absolute;
  z-index: 100;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.car-icon{
  width: 40rpx;
  height: 40rpx;
}
.pay-money{
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  margin-left: 150rpx;
  flex: 1;
}
.payment{
  width: 150rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  background-color: #FECE51;
  border-radius: 25rpx;
}
.image-box{
  padding: 20rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  top: -20rpx;
  left: 40rpx;
  display: flex;
  align-items: center;
}
.car-data{
  width: 100%;
  padding: 0 15rpx;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  background-color: #fff;
  box-sizing: border-box;
}
.car-header{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  align-items: center;
}
.title{
  font-size: 26rpx;
}
.remove-box{
  display: flex;
  align-items: center;
}
.remove-icon{
  width: 40rpx;
  height: 40rpx;
}
.remove-text{
  margin-left: 10rpx;
  font-size: 26rpx;
}